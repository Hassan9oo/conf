! Japanese notebook
!keysym space = Control_L
!add Control = Control_L
!keysym Henkan_Mode = space
!keysym Muhenkan = BackSpace
!remove Lock = Caps_Lock
!keysym Caps_Lock = Return

keycode 20 = colon asterisk
keycode 34 = bracketleft braceleft
keycode 35 = bracketright braceright
keycode 48 = minus equal
keycode 51 = at grave

keycode 100 = space

!add Alt_L = Muhenkan
!keysym Muhenkan = Alt_L

!remove Mod1 = Alt_L
!keysym Alt_L = Shift_L
!add Shift = Shift_L

keycode 102 = Shift_R
add Shift = Shift_R

keycode 65 = Control_R
add Control = Control_R

keysym Hiragana_Katakana = Alt_R
add mod1 = Hiragana_Katakana

clear Lock
keycode 66 = Return

keycode 49 = Escape

!HHK light
!remove Control = Control_L
!keysym Control_L = Alt_L
!add mod1 = Alt_L

!add mod1 = Zenkaku_Hankaku
!keysym Zenkaku_Hankaku = Alt_L

!!! conf for Kinesis
!keycode 22 = Shift_L
!add shift = Shift_L
!
!clear control
!keycode 37 = Alt_L
!add mod1 = Alt_L
!
!keycode 119 = Control_L
!add control = Control_L
!
!keycode 105 = Shift_R
!add shift = Shift_R
!!! conf for Kinesis
