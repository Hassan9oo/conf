# http://devel.aquahill.net/zsh/aliases

echo "Loading zshaliases"

# some useful aliases
alias h='fc -l'
#alias h=history
alias j='jobs -l'
alias m=$PAGER
alias g='egrep -i'

alias x=exit
alias where='command -v'
alias su='su -l'

alias df='df -h'
alias du='du -ackh'
alias diff='diff -NBaur'
alias scp='scp -p'

os_type=`uname`
if [ "$os_type" = "Linux" ]; then
    alias l='ls --color=auto -la'
    alias v=vim
elif [ "$os_type" = "FreeBSD" ]; then
    alias l='ls -laG'
    alias e='emacs -nw'
    alias v=vim
elif [ "$os_type" = "Darwin" ]; then
    alias l='ls -lahG'
fi

# show the directories or symbolic link of directories
alias lsd='ls -ld *(-/DN)'

# show the files start with "."
alias lsa='ls -ld .*'

# global alias
# http://hatena.g.hatena.ne.jp/hatenatech/20060517/1147833430
alias -g H='|head'
alias -g T='|tail'
alias -g L='|less'
alias -g G='|grep'
alias -g GI='|grep -i'

dl (){
  command mv $* ~/.Trash/
}

# vcs alias
alias gad='git add'
alias gst='git status'
alias gci='git commit -m'
alias gps='git push'
alias gpl='git pull'
alias gdf='git diff'

alias sci='svn commit -m'
alias sst='svn status'
alias sdf='svn diff'
alias sad='svn add'
alias sup='svn update'
alias smv='svn mv'
alias sco='svn checkout'
